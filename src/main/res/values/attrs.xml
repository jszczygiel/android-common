<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TintedImageView">
        <attr name="tintColour" format="integer"/>
        <attr name="selectedTintColour" format="integer"/>
    </declare-styleable>

    <declare-styleable name="TintedIconImageView">
        <attr name="defaultColor" format="reference"/>
        <attr name="focusedColor" format="reference"/>
        <attr name="disabledColor" format="reference"/>
        <attr name="focusedDisabledColor" format="reference"/>
        <attr name="colorStateList" format="color"/>
        <attr name="tint" format="boolean"/>
        <attr name="android:src"/>
        <attr name="android:enabled"/>
    </declare-styleable>

    <declare-styleable name="AspectRatioContainer">
        <attr name="aspectRatio" format="float"/>
        <attr name="dominantMeasurement">
            <enum name="width" value="0"/>
            <enum name="height" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="CircularImageView">
        <attr name="civ_border" format="boolean"/>
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_inner_color" format="color"/>
        <attr name="civ_shadow" format="boolean"/>
        <attr name="civ_shadow_color" format="color"/>
        <attr name="civ_shadow_radius" format="float"/>
    </declare-styleable>

</resources>
