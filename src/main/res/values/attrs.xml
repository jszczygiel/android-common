<?xml version="1.0" encoding="utf-8"?>
<resources>

  <declare-styleable name="TintedImageView">
    <attr format="integer" name="tintColour"/>
    <attr format="integer" name="selectedTintColour"/>
  </declare-styleable>

  <declare-styleable name="TintedIconImageView">
    <attr format="reference" name="defaultColor"/>
    <attr format="reference" name="focusedColor"/>
    <attr format="reference" name="disabledColor"/>
    <attr format="reference" name="focusedDisabledColor"/>
    <attr format="color" name="colorStateList"/>
    <attr format="boolean" name="tintEnabled"/>
    <attr name="android:src"/>
    <attr name="android:enabled"/>
  </declare-styleable>

  <declare-styleable name="AspectRatioContainer">
    <attr format="float" name="aspectRatio"/>
    <attr name="dominantMeasurement">
      <enum name="width" value="0"/>
      <enum name="height" value="1"/>
    </attr>
  </declare-styleable>


  <declare-styleable name="CircularImageView">
    <attr format="boolean" name="civ_border"/>
    <attr format="dimension" name="civ_border_width"/>
    <attr format="color" name="civ_border_color"/>
    <attr format="color" name="civ_inner_color"/>
    <attr format="boolean" name="civ_shadow"/>
    <attr format="color" name="civ_shadow_color"/>
    <attr format="float" name="civ_shadow_radius"/>
  </declare-styleable>

</resources>
